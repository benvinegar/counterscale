{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "dev": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "preview": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "deploy": {},
        "test": {},
        "test-ci": {},
        "lint": {},
        "typecheck": {}
    }
}
